{
    "editor.mouseWheelZoom": true,
    "explorer.confirmDelete": false,
    "search.showLineNumbers": true,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "editor.renderWhitespace": "boundary",
    "editor.wordWrapColumn": 120,
    "editor.minimap.showSlider": "always",
    "workbench.startupEditor": "none",
    "workbench.quickOpen.closeOnFocusLost": false,
    "newFile.defaultBaseFileName": "new_file",
    "newFile.defaultFileExtension": "",
    "newFile.expandBraces": true,
    "newFile.relativeTo": "project",
    "newFile.showPathRelativeTo": "project",
    "workbench.settings.editor": "json",
    "workbench.settings.openDefaultSettings": true,
    "git.autofetch": true,
    "code-runner.clearPreviousOutput": true,
    "code-runner.saveFileBeforeRun": true,
    "code-runner.saveAllFilesBeforeRun": true,
    "code-runner.executorMap": {
        "python.pythonPath": "pythonPath -u $fullFileName",
        "cpp": "cd $dir && g++ $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    },
    "code-runner.executorMapByFileExtension": {
        ".ml": "ocaml",
    },
    "editor.minimap.enabled": true,
    "workbench.statusBar.visible": true,
    "editor.formatOnSave": true,
    "vscodeWorkspaceSwitcher.paths": [
        "C:\\Users\\MY_USER_NAME\\Documents\\VSC workspaces"  // change MY_USER_NAME
    ],
    "explorer.confirmDragAndDrop": false,
    "debug.allowBreakpointsEverywhere": true,
    "debug.showBreakpointsInOverviewRuler": true,
    "debug.showInStatusBar": "always",
    "debug.openExplorerOnEnd": true,
    "debug.internalConsoleOptions": "openOnSessionStart",
    "code-runner.runInTerminal": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "python.terminal.executeInFileDir": true,
    "toggler.toggles": [
        [
            "aceptar",
            "cancelar",
        ],
        [
            "verdadero",
            "falso",
        ],
    ],
    "newFile.rootDirectory": "~\\Desktop",
    "window.zoomLevel": 0,
    "emmet.excludeLanguages": [
        // "markdown"
    ],
    "code-runner.enableAppInsights": true,
    "terminal.integrated.shell.windows": "C:\\windows\\System32\\cmd.exe",
    "extensions.ignoreRecommendations": false,
    "openInTerminal.app": "cmd",
    "terminal.explorerKind": "integrated",
    "workbench.colorTheme": "Predawn",
    // Controls the font family.
    "editor.fontFamily": "Source Code Pro",
    "workbench.iconTheme": "vscode-icons",
    "python.analysis.diagnosticPublishDelay": 270,
    "python.linting.pylintArgs": [
        "--disable=invalid-name",
        "--max-line-length=120",
        "--disable=missing-module-docstring",
        "--disable=wrong-import-order",
        "--disable=multiple-imports"
    ],
    "python.formatting.autopep8Args": [
        "--max-line-length=120",
        "--ignore=E401"
    ],
    "python.linting.pylintUseMinimalCheckers": false,
    "python.defaultInterpreterPath": "C:\\Users\\MY_USER_NAME\\AppData\\Local\\Programs\\Python\\Python38-32\\python.exe", // change MY_USER_NAME
}
